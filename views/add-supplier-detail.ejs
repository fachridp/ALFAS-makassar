<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- My CSS -->
    <link rel="stylesheet" href="css/add-products/add-products.css" />

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title><%= title %></title>
  </head>
  <body>
    <div class="container mt-3 mb-3">
      <div class="row">
        <div class="col-md-6">
          <h2>Tambah Detail Pemesanan / Pembelian Barang Pada <%= supplier_name %></h2>
          <form method="post" action="/suppliers/lihat/<%= lihatId %>/detail/<%= idURL %>" class="mt-3" autocomplete="off">
            <div class="mb-3">
              <label for="product_name" class="form-label">Nama Barang :</label>
              <input
                type="text"
                class="form-control"
                id="product_name"
                name="product_name"
                required
                placeholder="Masukkan Nama Barang..."
                autofocus
              />
            </div>
            <div class="mb-3">
              <label for="category" class="form-label">Kategori :</label>
              <input
                type="text"
                class="form-control"
                id="category"
                name="category"
                placeholder="Masukkan Kategori Barang..."
                required
              />
            </div>
            <div class="mb-3">
              <label for="harga_pokok" class="form-label">Modal :</label>
              <input
                type="Number"
                class="form-control"
                id="harga_pokok"
                name="harga_pokok"
                placeholder="Masukkan Modal Barang..."
                required
              />
            </div>
            <div class="mb-3">
              <label for="harga_jual" class="form-label">Harga Satuan :</label>
              <input
                type="Number"
                class="form-control"
                id="harga_jual"
                name="harga_jual"
                placeholder="Masukkan Harga Satuan Barang..."
                required
              />
            </div>
            <div class="mb-3">
              <label for="qty" class="form-label">Jumlah Beli :</label>
              <input
                type="Number"
                class="form-control"
                id="qty"
                name="qty"
                placeholder="Masukkan Jumlah Beli Barang..."
                required
              />
            </div>
            <div class="mb-3 col">
                  <label for="unit" class="form-label">Satuan Barang :</label>
                  <select id="unit" name="unit" class="form-select class_unit">
                    <option  disabled selected>Pilih</option>
                    <% units.forEach((unit, i) => { %>
                      <option value="<%= unit.unit %>"><%- unit.unit %></option>
                    <% }) %>
                  </select>
            </div>
            <a href="/suppliers/lihat/<%= lihatId %>/detail/<%= idURL %>" class="btn btn-danger">Batal</a>
            <button type="submit" class="btn btn-success">Tambah</button>
          </form>
        </div> 
      </div>
    </div>
  </body>
</html>
