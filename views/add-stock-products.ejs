<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- My CSS -->
    <!-- <link rel="stylesheet" href="css/add-category/add-category.css" /> -->

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title><%= title %></title>
  </head>
  <body>
    <div class="container my-3">
      <div class="row">
        <div class="col-md-6">
          <h2>Tambah Stok Barang Baru</h2>
          <form method="post" action="/stock-products" class="mt-3" autocomplete="off">
            <div class="mb-3">
              <label for="product_name" class="form-label">Nama Barang :</label>
                <input type="text" class="form-control" id="product_name" name="product_name" autofocus placeholder="Masukkan Nama Barang..." required />
            </div>
            <div class="mb-3">
              <label for="category" class="form-label">Kategori :</label>
              <select id="category" name="category" class="form-select">
                <option value="" selected disabled>Pilih</option>
                <% categorys.forEach((category, i) => { %> 
                  <option value="<%- category.category %>"><%- category.category %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <label for="qty" class="form-label">Jumlah Stok :</label>
                <input type="Number" class="form-control" id="qty" name="qty" placeholder="Masukkan Jumlah Stok Barang..." required />
            </div>
            <div class="mb-3">
              <label for="unit" class="form-label">Satuan Barang:</label>
              <select id="unit" name="unit" class="form-select">
                <option value="" selected disabled>Pilih</option>
                <% units.forEach((unit, i) => { %>
                  <option><%- unit.unit %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <label for="harga_pokok" class="form-label">Modal :</label>
              <input type="text" class="form-control" id="harga_pokok" name="harga_pokok" placeholder="Masukkan Modal Barang..." required />
            </div>
            <div class="mb-3">
              <label for="selling_price" class="form-label">Harga Satuan :</label>
              <input type="text" class="form-control" id="selling_price" name="selling_price" placeholder="Masukkan Harga Satuan Barang..." required />
            </div>
            <div class="mb-3">
              <label for="isi" class="form-label">Isi Eceran (Opsional) :</label>
              <input type="text" class="form-control" id="isi" name="isi" placeholder="Masukkan Isi Eceran..."/>
            </div>
            <a href="/stock-products" class="btn btn-danger">Batal</a>
            <button type="submit" class="btn btn-success">Tambah</button>
          </form>
        </div> 
      </div>
    </div>
    <script>
      const isiEceran = document.querySelector('#isi');

      console.log(isiEceran.value);

      if (isiEceran.value === "") {
        isiEceran.value = "-";
      }
    </script>
  </body>
</html>
