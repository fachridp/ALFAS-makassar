<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- My CSS -->
    <link rel="stylesheet" href="css/product-debt/product-debt.css" />

    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <title><%= title %></title>
  </head>
  <body>
    <div class="container-main">
      <!-- Nav -->
      <div class="container-left">
        <ul class="nav flex-column ul-full">
          <li class="nav-item title">
            <div class="nav-link alfas-badge">
              <h2>ALFAS Shop</h2>
            </div>
          </li>
          <li class="nav-item nav-flex">
            <img src="../icons/dashboard_ic.svg" alt="dahboard icon" />
            <a class="nav-link nav-dashboard nav-link-active nav-hover" href="/dashboard"
              >Dashboard</a
            >
          </li>
          <li class="nav-item nav-flex">
            <img src="../icons/transaction_ic.svg" alt="transaction icon" />
            <a
              class="nav-link nav-today-sales nav-link-active nav-hover"
              href="/today-sales"
              >Today Sales</a
            >
          </li>
          <li class="nav-item nav-flex">
            <img src="../icons/history-transaction_ic.svg" alt="history icon" />
            <a class="nav-link nav-history-sales nav-link-active nav-hover" href="/history-sales"
              >History Sales</a
            >
          </li>
          <li class="nav-item nav-flex">
            <img src="../icons/stock_ic.svg" alt="stock icon" />
            <a class="nav-link nav-products nav-link-active nav-hover" href="/products">Products</a>
          </li>
          <li class="nav-item nav-flex">
            <img src="../icons/item-unit_ic.svg" alt="unit icon" />
            <a class="nav-link nav-units nav-link-active nav-hover" href="/units">Units</a>
          </li>
          <li class="nav-item nav-flex">
            <img src="../icons/supplier_ic.svg" alt="supplier icon" />
            <a class="nav-link nav-suppliers nav-link-active nav-hover" href="/suppliers">Suppliers</a>
          </li>
            <li class="nav-item nav-flex">
                <img
                  src="../icons/stock-products_ic.svg"
                  alt="stock products icon"
                />
                <a class="nav-link nav-stock-products nav-link-active nav-hover" href="/stock-products"
                  >Stock Products</a
                >
            </li>
            <div class="dropdown">
                <img
                  src="../icons/customer-debt_ic.svg"
                  alt="dashboard icon"
                />
                <button class="dropbtn">Debts</button>
                <div class="dropdown-content">
                    <a href="/customers-debt">Customer Debt Names</a>
                    <a href="/product-debt" class="nav-product-debt">Product Debt Customers</a>
                </div>
            </div>
          <li class="nav-item nav-flex">
            <img src="../icons/category_ic.svg" alt="category icon" />
            <a class="nav-link nav-link-active nav-hover" href="/category">Categorys</a>
          </li>
          <li class="nav-item nav-flex abc">
            <img src="../icons/logout_ic.svg" alt="logout icon" />
            <a class="nav-link logout" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
      <!-- End of Nav -->
      <div class="container-right">
        <div class="items">
            <div class="title">
                <h2>Product Debt Customers</h2>
            </div>
            <div class="three-element">
                <div class="btn-action">
                    <a href="/product-debt/add-product-debt" class="btn">Add New Product Debt Customers</a>
                </div>
            </div>
            <!-- cek variabel msg jika tidak ada isinya -->
            <% if (msg.length !== 0) { %>
              <div class="alert alert-success d-block mt-3" role="alert">
                    <p id="check"> <%= msg %> </p>
              </div>
            <% } %>
            <table class="table text-center">
                <thead>
                            <tr>
                              <th scope="col">No</th>
                              <th scope="col">Date</th>
                              <th scope="col">Customer Name</th>
                              <th scope="col">Total Debt</th>
                              <th scope="col">Action</th>
                            </tr>
                </thead>
                <tbody class="align-middle">
                <% filters.forEach((filter, i) => { %>
                  <tr>
                    <td scope="row"><%- i+1 %></td>
                    <td scope="row"><%- filter._id.date %></td>
                    <td scope="row"><%- filter._id.customer_name %></td>
                    <td>Rp. <%- filter.total_debt %></td>
                    <td>
                        <a href="/product-debt/detail/<%= filter._id.customer_name %>" class="btn btn-primary">Detail</a>
                        <form action="/product-debt?_method=DELETE" method="POST">
                          <input
                            type="hidden"
                            name="_id"
                            value="<%= filter._id.customer_name %>"/>
                          <button
                            type="submit"
                            class="btn"
                            onclick="return confirm('Yakin?');">Delete</button>
                        </form>
                    </td>
                  </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
  </body>
</html>
